import { createSlice, PayloadAction } from '@reduxjs/toolkit';
import { UIState } from '../../types';

const initialState: UIState = {
  activeTab: 'interviewee',
  showCandidateDetails: false,
};

const uiSlice = createSlice({
  name: 'ui',
  initialState,
  reducers: {
    setActiveTab: (state, action: PayloadAction<'interviewee' | 'interviewer'>) => {
      state.activeTab = action.payload;
    },
    setShowCandidateDetails: (state, action: PayloadAction<boolean>) => {
      state.showCandidateDetails = action.payload;
    },
  },
});

export const { setActiveTab, setShowCandidateDetails } = uiSlice.actions;

export default uiSlice.reducer;